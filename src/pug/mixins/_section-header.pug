mixin section-header(title, search, viewBtn, lineType = 'primary')
  .sh(class="flex justify-between items-center gap-x-3 2md:flex-col-reverse 2md:items-start 2md:gap-y-5")&attributes(attributes)
    .sh-title
      h2.sh-title-text(class="font-secondary-bold text-2xl text-black 2md:text-xl")= title
      .sh-title-line(class="mt-3 rounded-full w-9 h-1 2md:mt-2" class="bg-gradient-" + lineType)
    if (search || viewBtn)
      .sh-bar(class="flex items-center gap-2 2md:w-full 2md:flex-row-reverse")
        if viewBtn
          .sh-viewbtn.view-btn(class="flex-shrink-0 rounded-full w-11 h-11 flex justify-center items-center bg-[#E8EAF7] hover:bg-[#dcdff1] cursor-pointer 2md:w-10 2md:h-10")
            .btn-icon._list(class="w-[14px] h-[14px] [&_svg]:w-[100%] [&_svg]:h-[100%] [&_svg]:opacity-20")
              include ../../assets/images/icon-list.svg
            .btn-icon._cards(class="w-1/2 h-1/2 [&_svg]:w-[100%] [&_svg]:h-[100%] [&_svg]:opacity-20")
              include ../../assets/images/icon-cards.svg
        if search
            .sh-search(class="rounded-full h-[50px] px-6 max-w-[270px] w-full flex items-center bg-[#E8EAF7] 2md:max-w-none 2md:flex-grow 2md:h-10 2md:px-3")
              button.sh-search-icon(class="flex-shrink-0 w-4 h-full [&_svg]:w-full flex justify-center items-center text-[#B8BACF] duration-100 hover:text-black")
                include ../../assets/images/icon-search.svg
              input.sh-search-input(class="flex-grow ml-2.5 w-full h-full bg-transparent font-primary-med text-base text-black 2md:text-sm" placeholder="Поиск")
