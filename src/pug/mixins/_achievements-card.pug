mixin achievment-card(imgSrc, title, desc, isProgress = false)
  .achc(class="rounded-lg p-6 flex flex-col justify-center items-center bg-white shadow-lg 2md:p-3 2md:shadow")
    .achc-pic(class=(isProgress ? "max-w-[97px] max-h-[97px] opacity-30 2md:max-w-[60px] 2md:max-h-[60px] sm:max-w-[50px] sm:max-h-[50px]" : "max-w-[120px] max-h-[120px] 2md:max-w-[80px] 2md:max-h-[80px] sm:max-w-[60px] sm:max-h-[60px]"))
      +image(imgSrc + '.png', 'w-full h-full')
    .achc-title(class="mt-3 font-primary-bold text-center text-[13px] text-black sm:mt-1 sm:text-xs")= title
    .achc-desc(class="mt-2 mb-3 font-secondary-med text-center text-xs text-[#A6B1C7] sm:mt-1 sm:text-[10px]")= desc
    if isProgress
      .achc-progress(class="mt-auto overflow-hidden rounded-lg w-full h-[3px] bg-[#F1EDED]")
        .achc-progress-line(class="rounded-lg w-[65%] h-full bg-gradient-primary")